                @*@Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Team.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Team.Naam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Werknemer.VolledigeNaam)
