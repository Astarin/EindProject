@model EindProjectBusinessModels.JaarlijksVerlof
@{
    ViewBag.Title = "HrWVerlofToevoegen";
}

@Html.Raw(EindProjectMVC.Models.HrMenuGenerator.CreeerHrMenu())

  @using (Html.BeginForm("HrWJaarlijksVerlofToevoegen","HR"))
{
    @Html.AntiForgeryToken()

