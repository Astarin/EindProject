                @Html.EditorFor(model => model.Jaar)
                @Html.ValidationMessageFor(model => model.Jaar)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AantalDagen, new { @class = "col-sm-2 control-label" })
