                @Html.EditorFor(model => model.AantalDagen)
                @Html.ValidationMessageFor(model => model.AantalDagen)
            </div>
        </div>
    </div>

}

@section Scripts{
    @System.Web.Optimization.Scripts.Render("~/bundles/jqueryval");
}