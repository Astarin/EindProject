@{
    ViewBag.Title = "HrTeamToevoegen";
}
@Html.Partial("_TitelEnError")
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" role="form">
        <h4>Team Toevoegen</h4>
        <hr />
        @Html.ValidationSummary(true)

        @{EindProjectBusinessModels.Team team = new EindProjectBusinessModels.Team();}

        <div class="form-group">
            @Html.LabelFor(t => team.Naam, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @*@Html.EditorFor(t => team.Naam, new { @Value = String.Empty })*@
                @Html.TextBoxFor(t => team.Naam, new { @Value = String.Empty })
                @Html.ValidationMessageFor(t => team.Naam)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Creer Team" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts{
    @System.Web.Optimization.Scripts.Render("~/bundles/jqueryval");
}
