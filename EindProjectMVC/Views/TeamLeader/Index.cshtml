@model EindProjectBusinessModels.VerlofAanvraag

@{
    ViewBag.Title = "TeamLeader Index";
}
@Html.Partial("_TitelEnError")
@using (@Html.BeginForm("InfoForWerknemer", "TeamLeader"))
{
    <table>
        <tr>
            <th>Werknemer</th>
            <th>Startdatum</th>
            <th>Einddatum</th>
            <th>Status</th>
        </tr>
        <tr>
            <td>@Html.CheckBox("chkAlleWerknemers", false)@Html.Label("lblAlle", "alle teamleden of selecteer ")@Html.DropDownList("ddlTeamLeden")</td>
            <td>@Html.EditorFor(model => model.StartDatum)</td>
            <td>@Html.EditorFor(model => model.EindDatum)</td>
            <td>@Html.EditorFor(model => model.Toestand)</td>
        </tr>
    </table>
    <input type="submit" name="btnBevestig" value="Bevestig" />
}
